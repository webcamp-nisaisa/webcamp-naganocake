<div class="row">
  <div class="col m-3">
    <h3><mark>注文履歴一覧</mark></h3>
  </div>
  <table class="table table-inverse">
    <thead class="table-color">
      <tr>
        <th scope="col">購入日時</th>
        <th scope="col">購入者</th>
        <th scope="col">注文個数</th>
        <th scope="col">注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order), class: "link" %></td>
          <td><%= order.customer.full_name %></td>
          <td><%= order.order_items.sum(:amount) %></td>
          <td>
            <%= order.ordering_status_i18n %>
        </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @orders %>