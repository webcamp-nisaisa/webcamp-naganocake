<div class="row">
  <div class="col m-3">
    <h3><mark>ジャンル一覧・追加</mark></h3>
    <div class="my-5">
      <%= form_with model:@genre,url:"/admin/genres",local:true do |f| %>
        <%= f.label:"ジャンル名" %>
        <%= f.text_field:name,placeholder:"ジャンル名" %>
        <%= f.submit "新規登録",class:"btn register_button motion ml-5" %>
      <% end %>
    </div>
    <table class="table table-hover w-25">
      <thead class="table-color">
        <th>ジャンル</th>
        <th></th>
      </thead>
      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する",edit_admin_genre_path(genre.id),class:"btn move_button motion" %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>