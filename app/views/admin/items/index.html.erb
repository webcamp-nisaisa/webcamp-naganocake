<div class="row">
  <div class="col m-3">
    <h3><mark>商品一覧</mark></h3>
  </div>
  <div class="col-auto ml-auto">
    <%= link_to  new_admin_item_path, class: 'btn btn-light rounded-circle' do %>
      <i class="fas fa-plus "></i>
    <% end %>
  </div>
  <table class="table table-inverse">
    <thead class="table-color">
      <tr>
        <th scope="col">商品ID</th>
        <th scope="col">商品名</th>
        <th scope="col">税抜価格</th>
        <th scope="col">ジャンル</th>
        <th scope="col">ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item), class: "link" %></td>
          <td><%= item.price.to_s(:delimited) %></td>
          <td><%= item.genre.name %></td>
          <td>
            <% if item.is_active == true %>
              <div class="text-success">販売中</div>
            <% else %>
              <div class="text-secondary">販売停止中</div>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @items %>