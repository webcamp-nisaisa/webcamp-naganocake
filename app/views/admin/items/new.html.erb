<div class="container">
	<div class="row">
		<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

			<h3>商品新規登録</h3>
			
				<%= form_with model: @item, url: admin_items_path, local: true do |f| %>

				  <div class="form-group">
				  	<label for="item-image">商品画像</label>
				  	<%= f.attachment_field :image %>
				  </div>
				
				  <div class="form-group">
				  	<label for="item-name">商品名</label>
				  	<%= f.text_field :name, placeholder: "商品名" %>
				  </div>
				
				  <div class="form-group">
				  	<label for="item-description">商品説明</label>
				  	<%= f.text_area :description, placeholder: "ここに説明文を記述します" %>
				  </div>
				
				  <div class="form-group">
				  	<label for="item-genre">ジャンル</label>
				    <%= f.collection_select :genre_id, @genres, :id, :name, { prompt: "選択してください" } %>
				  </div>
				
				  <div class="form-group">
				  	<label for="item-price">税込価格</label>
				  	<%= f.text_field :price, placeholder: "1000" %>円
				  </div>
				
				  <div class="form-group">
				  	<label for="item-status">販売ステータス</label>
				  	<%= f.radio_button :is_active, "available" %>
				  	<%= f.label :is_active, "販売中" %>
				
				  	<%= f.radio_button :is_active, "unavailable" %>
				  	<%= f.label :is_active, "販売停止中" %>
				  </div>
			  	  <div class="form-group">
			  	    <%= f.submit "新規登録" %>
			 	  </div>
				<% end %>
		</div>
	</div>
</div>