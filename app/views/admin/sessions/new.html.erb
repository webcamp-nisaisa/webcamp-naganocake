<div class='container'>
  <div class='row'>
    <div class="mx-auto">
      <h2>管理者ログイン</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control my-form" %>
        </div>
        <div class="field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password", :class => "form-control my-form" %>
        </div>
        <div class="actions mt-3">
          <%= f.submit "ログイン", class:"btn btn-primary"%>
        </div>
      <% end %>
      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>
