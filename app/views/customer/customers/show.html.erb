<div class="container">

		<h3>マイページ</h3>

		<div class="col d-flex align-items-center">
			<h4><strong>登録情報</strong></h4> <%= link_to "編集", customers_mypage_edit_path, class: "btn ml-3 register_button motion" %>
		</div>

		<table class="table table-bordered">
			<tr>
				<td class = "table-color">氏名</td><td><%= @customer.last_name %> <%= @customer.first_name %></td>
			</tr>
			<tr>
				<td class = "table-color">カナ</td>
				<td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
			</tr>
			<tr>
				<td class = "table-color">郵便番号</td>
				<td><%= @customer.post_code %></td></tr>
			<tr>
				<td class = "table-color">住所</td>
				<td><%= @customer.address %></td></tr>
			<tr>
				<td class = "table-color">電話番号</td>
				<td><%= @customer.phone_number %></td></tr>
			<tr>
				<td class = "table-color">メールアドレス</td>
				<td><%= @customer.email %></td></tr>
		</table>

		<div class="col d-flex align-items-center mt-3">
			<h4><strong>配送先</strong></h4>
			<%= link_to "一覧を見る", shippings_path, class: "btn ml-3 move_button motion"%>
		</div>
		<div class="col d-flex align-items-center mt-3">
			<h4><strong>注文履歴</strong></h4>
			<%= link_to "一覧を見る", orders_path, class: "btn ml-3 move_button motion"%>
		</div>
</div>