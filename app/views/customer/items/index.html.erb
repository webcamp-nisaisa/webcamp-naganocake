<h1><mark>商品一覧<span class="h3">(全<%= @items.count %>件)</span></mark></h1>
<div class="d-flex flex-wrap">
  <% @items.each do |item| %>
    <div class= "p-5">
      <%= link_to item_path(item) do %>
        <%= attachment_image_tag(item, :image, :fill, 200, 200) %><br>
        <%= item.name %><br>
      <% end%>
      ¥<%= (item.price * 1.1).round.to_s(:delimited) %>(税込)
    </div>
  <% end %>
</div>
<%= paginate @items %>