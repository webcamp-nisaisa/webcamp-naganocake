<div class="row">
  <div class="col m-3">
    <h3><mark>商品一覧<span class="h3">(全<%= @all_items %>件)</span></mark></h3>
    <div class="d-flex flex-wrap">
      <% @items.each do |item| %>
        <div class= "p-4">
          <%= link_to item_path(item), class: "link" do %>
            <%= attachment_image_tag(item, :image, size: '220x220') %><br>
            <%= item.name %><br>
          <% end %>
          <% if item.is_active == true %>
            ¥<%= (item.price * 1.1).round.to_s(:delimited) %>(税込)
          <% else %>
            ※売切れ
          <% end %>
        </div>
      <% end %>
    </div>
    <span class="link"><%= paginate @items, class: "link" %></span>
  </div>
</div>