<div class="container">
  <div class="row">
    <div class="col-7">
      <%= attachment_image_tag @item, :image, :fill, 300, 250 %>
    </div>
    <div>
      <h3><strong><%= @item.name %></strong></h3>
      <div class="mt-3 pt-3">
        <%= @item.description%><br>
      </div>
      <div class="mt-5 pt-5">
        <h3><strong>¥<%= (@item.price * 1.1).round.to_s(:delimited) %></strong><span class="h6">(税込)</span></h3>
      </div>

      <div class="pt-5 mt-5">
        <%= form_with model: @cart_item, method: :post, local: true do |f| %>
          <%= f.select :amount, *[1..10] %>
          <%= f.hidden_field :item_id, value: @item.id %>
          <% if customer_signed_in? %>
          <%= f.submit "カートに入れる", class:"btn register_button motion"%>
          <% else %>
          <%= link_to "カートに入れる",new_customer_registration_path, class:"btn register_button motion" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>