<div class="row">
  <div class="col-7">
    <%= attachment_image_tag @item, :image, size: '500x450' %>
  </div>
  <div class="col-5 mt-3 text-break">
    <h3><strong><%= @item.name %></strong></h3>
    <div class="mt-3 pt-3">
      <%= @item.description%><br>
    </div>
    <div class="mt-5 pt-5">
      <h3><strong>¥<%= (@item.price * 1.1).round.to_s(:delimited) %></strong><span class="h6">(税込)</span></h3>
    </div>
    <div class="pt-5 mt-5">
      <%= form_with model: @cart_item, method: :post, local: true do |f| %>
        <% if @item.is_active == true %>
          <%= f.select :amount, *[1..10] %>
          <%= f.hidden_field :item_id, value: @item.id %>
          <%= f.submit "カートに入れる", class:"btn register_button motion"%>
        <% else %>
          <h5>※売切れ商品です</h5>
        <% end %>
      <% end %>
    </div>
  </div>
  </div>