<div class='row'>
  <div class="col mt-3 ml-3">
    <h3><mark>新規会員登録</mark></h3>
    <div class="mt-3">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <table class="table table-borderless table-sm">
        <tr>
          <td><%= f.label :名前 %></td>
          <td>(姓)</td>
          <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "令和" %></td>
          <td>(名)</td>
          <td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "道子" %></td>
        </tr>
        <tr>
          <td><%= f.label :フリガナ %></td>
          <td>(セイ)</td>
          <td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana",placeholder: "レイワ" %></td>
          <td>(メイ)</td>
          <td><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "ミチコ" %></td>
        </tr>
        <tr>
          <td><%= f.label :メールアドレス %></td>
          <td></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@example.com" %></td>
        <tr>
        <tr>
          <td><%= f.label :郵便番号（ハイフンなし） %></td>
          <td></td>
          <td><%= f.text_field :post_code, autofocus: true, autocomplete: "post_code", placeholder: "0000000" %></td>
        <tr>
        <tr>
          <td><%= f.label :住所 %></td>
          <td></td>
          <td colspan="3">
            <%= f.text_field :address, :size=>"50", autofocus: true, autocomplete: "address",placeholder: "東京都渋谷区代々木神園町０−０" %>
          </td>
        <tr>
        <tr>
          <td><%= f.label :電話番号（ハイフンなし） %></td>
          <td></td>
          <td><%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number",placeholder: "00000000000" %></td>
        <tr>
        <tr>
          <td><%= f.label :パスワード（６文字以上）%></td>
          <td></td>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        <tr>
        <tr>
          <td><%= f.label :パスワード（確認用） %></td>
          <td></td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        <tr>
        <tr>
          <td></td>
          <td></td>
          <td><%= f.submit "新規登録", class: "btn register_button motion ml-5 pr-3" %></td>
        <tr>
        </table>
      <% end %>
      <h5 class="mt-4">
        <mark>既に登録済みの方 </mark>
      </h5>
      <p class="ml-4 p-3"><%= link_to "こちら", new_customer_session_path %>からログインを行ってください。</p>
    </div>
  </div>
</div>
