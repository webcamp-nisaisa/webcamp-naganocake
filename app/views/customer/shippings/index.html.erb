<div class="row">
  <div class="col m-3">
    <h3><mark>配送先登録/一覧</mark></h3>
    <div class="mt-5">
      <%= form_with model:@shipping,local:true do |f| %>
        <table>
          <tr>
            <td><%= f.label:"郵便番号（ハイフンなし）" %></td>
            <td><%= f.number_field:post_code %></td>
          </tr>
          <tr>
            <td><%= f.label:"住所" %></td>
            <td><%= f.text_field:address,:size=>"50" %></td>
          </tr>
          <tr>
            <td><%= f.label:"宛名" %></td>
            <td><%= f.text_field:name,placeholder:"令和道子" %></td>
            <td><%= f.submit "新規登録",class:"btn register_button motion" %></td>
          </tr>
        </table>
      <% end %>
    </div>
    <table class="table table-hover w-70 mt-3">
      <thead class="table-color">
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </thead>
      <% @shippings.each do |shipping| %>
        <tr>
          <td>〒<%= shipping.post_code %></td>
          <td><%= shipping.address %></td>
          <td><%= shipping.name %></td>
          <td>
            <%= link_to "編集する",edit_shipping_path(shipping.id),class:"btn move_button motion" %>
            <%= link_to "削除する",shipping_path(shipping.id),method: :delete,"data-confirm"=>"本当に削除しますか？",class:"btn register_button motion" %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>