<div class="p-5">
  <h4>配送先登録/一覧</h4>
  <div class="mt-5">
    <%= form_with model:@shipping,local:true do |f| %>
      <%= f.label:"郵便番号（ハイフンなし）" %>
      <%= f.number_field:post_code %><br>
      <%= f.label:"住所" %>
      <%= f.text_field:address,placeholder:"東京都渋谷区代々木神園町0-0" %><br>
      <%= f.label:"宛名" %>
      <%= f.text_field:name,placeholder:"令和道子" %><br>
      <%= f.submit "新規登録",class:"btn register_button motion ml-3" %>
    <% end %>
  </div>
  <table class="table table-hover w-50">
    <thead>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </thead>
    <% @shippings.each do |shipping| %>
    <tr>
      <td><%= shipping.post_code %></td>
      <td><%= shipping.address %></td>
      <td><%= shipping.name %></td>
      <td>
        <%= link_to "編集する",edit_shipping_path(shipping.id),class:"btn move_button motion" %>
        <%= link_to "削除する",shipping_path(shipping.id),method: :delete,"data-confirm"=>"本当に削除しますか？",class:"btn register_button motion" %>
      </td>
    </tr>
    <% end %>
  </table>
</div>