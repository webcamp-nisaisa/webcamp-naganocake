<div>
  <h4>注文情報入力</h4>
  <div>
    <h5>支払い方法</h5>
    <%= form_with model:@order,local:true do |f| %>
      <%= f.radio_button:payment_method,@credit_card %>
      <%= f.label:payment_method,@credit_card_ja %>
      <%= f.radio_button:payment_method,@transfer %>
      <%= f.label:payment_method,@transfer_ja %>
    <h5>お届け先</h5>
      <div>
        <%= f.radio_button:select_address,0 %>
        <%= f.label:select_address,"ご自身の住所" %><br>
        <p>埼玉県さいたま市埼玉町</p>
      </div>
      <div>
        <%= f.radio_button:select_address,1 %>
        <%= f.label:select_address,"登録済住所から選択" %><br>
        <%= f.select:shipping_id,options_from_collection_for_select(Genre.all,:id,:name) %>
      </div>
      <div>
        <%= f.radio_button:select_address,2 %>
        <%= f.label:select_address,"新しいお届け先" %><br>
        <%= f.label:"郵便番号（ハイフンなし）" %>
        <%= f.number_field:post_code,placeholder:"0000000" %><br>
        <%= f.label:"住所" %>
        <%= f.text_field:address,placeholder:"東京都渋谷区代々木神園町0-0" %><br>
        <%= f.label:"宛名" %>
        <%= f.text_field:name,placeholder:"令和道子" %><br>
        <%= f.submit "確認画面へ進む",class:"btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>