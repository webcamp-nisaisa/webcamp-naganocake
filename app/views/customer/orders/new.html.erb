<div class="container">
  <h4 class="text-center">注文フォーム</h4>
  <ol class="nav">
  	<li class="nav-form current">入力</li>
  	<li class="nav-form  mx-5">確認</li>
  	<li class="nav-form ">完了</li>
  </ol>
  <div class="mt-5">
    <h4>注文情報入力</h4>
    <div>
      <h4>支払い方法</h4>
      <span class="ml-3">
        <%= form_with model:@order,url:orders_confirm_path,local:true do |f| %>
          <%= f.radio_button:payment_method,@credit_card,checked:true %>
          <%= f.label:payment_method,@credit_card_ja %><br>
          <%= f.radio_button:payment_method,@transfer %>
          <%= f.label:payment_method,@transfer_ja %>
      </span>
      <h4>お届け先</h4>
      <span class="ml-3">
          <%= f.radio_button:select_address,0,checked:true %>
          <%= f.label:select_address,"ご自身の住所" %><br>
          <%= current_customer.full_address %><br>
          <%= current_customer.full_name %><br>
          <%= f.radio_button:select_address,1 %>
          <%= f.label:select_address,"登録済住所から選択" %><br>
          <%= f.select:shipping_id,options_from_collection_for_select(Shipping.where(customer_id:current_customer),:id,:full_address) %><br>
          <%= f.radio_button:select_address,2 %>
          <%= f.label:select_address,"新しいお届け先" %><br>
          <%= f.label:"郵便番号（ハイフンなし）" %>
          <%= f.number_field:post_code,placeholder:"0000000" %><br>
          <%= f.label:"住所" %>
          <%= f.text_field:address,placeholder:"東京都渋谷区代々木神園町0-0" %><br>
          <%= f.label:"宛名" %>
          <%= f.text_field:name,placeholder:"令和道子" %><br>
          <%= f.submit "確認画面へ進む",class:"btn move_button motion mt-3" %>
        <% end %>
      </span>
    </div>
  </div>
</div>