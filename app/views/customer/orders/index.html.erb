<div class="row">
  <div class="col m-3">
    <h3><mark>注文履歴一覧</mark></h3>
		<table class="table table-bordered mt-5">
		  <tbody>
			<tr class="table-color">
				<td>注文日</td>
				<td>配送先</td>
				<td>注文商品</td>
				<td>支払金額</td>
				<td>ステータス</td>
				<td>注文詳細</td>
			</tr>
			<% @orders.each do |order| %>
				<tr>
					<td><%= order.created_at.strftime('%Y/%m/%d') %></td>
					<td>〒<%= order.post_code %></br>
					  　<%= order.address %></br>
					  　<%= order.name %>
					</td>
					<td>
						<% order.order_items.each do |order_item| %>
							<%= order_item.item.name %></br>
						<% end %>
					</td>
					<td><%= order.total_price.to_s(:delimited) %></td>
					<td><%= order.ordering_status_i18n %></td>
					<td><%= link_to "表示する", order_path(order), class: "btn move_button motion" %></td>
				</tr>
			<% end %>
 	    </tbody>
		</table>
	</div>
</div>